<?xml version="1.0"?>
<!DOCTYPE cache PUBLIC
    "-//GemStone Systems, Inc.//GemFire Declarative Caching 8.0//EN"
    "http://www.gemstone.com/dtd/cache8_0.dtd">

<cache>

	<!-- Defines the persistent channel that chats and batches across the WAN -->
	<!-- sends data when it has 100 objects or 1 second has elapsed, whichever 
		comes first -->
	<gateway-sender id="DC1" remote-distributed-system-id="2"
		parallel="true" maximum-queue-memory="50" batch-size="100"
		batch-time-interval="1000" manual-start="false" />
	<gateway-receiver />

	<pdx>
		<pdx-serializer>
			<class-name>com.gemstone.gemfire.pdx.ReflectionBasedAutoSerializer</class-name>
			<parameter name="classes">
				<string>.*</string>
			</parameter>
		</pdx-serializer>
	</pdx>

	<!-- the gateway-sender-id references the above gateway sender for WAN replication -->
	<region name="test">
		<region-attributes data-policy="partition"
			gateway-sender-ids="DC1">
			<partition-attributes redundant-copies="1"
				total-num-buckets="11" />
			<cache-writer>
				<class-name>io.pivotal.event.writer.SessionWriter</class-name>
				<parameter name="dataCenterId">
					<string>DC1</string>
				</parameter>
			</cache-writer>
			<cache-listener>
				<class-name>io.pivotal.event.listener.SessionListener</class-name>
				<parameter name="filename">
					<string>sessionTimings.csv</string>
				</parameter>
				<parameter name="loglevel">
					<string>FINE</string>
				</parameter>
				<parameter name="dataCenterId">
					<string>DC1</string>
				</parameter>
			</cache-listener>

			<eviction-attributes>
				<lru-heap-percentage action="local-destroy" />
			</eviction-attributes>
		</region-attributes>
	</region>
	<resource-manager critical-heap-percentage="75"
		eviction-heap-percentage="65" />
</cache>

